<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Light Theme -->
    <style name="Base.Theme.SVARP.Day" parent="Theme.Material3.Light.NoActionBar">

        <!-- Typography -->
        <item name="fontFamily">@font/noto_sans</item>

        <!-- Primary (Authority / Main actions) -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryContainer">@color/blue_100</item>
        <item name="colorOnPrimaryContainer">@color/blue_900</item>

        <!-- Secondary (Supportive UI, secondary actions) -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryContainer">@color/blue_200</item>
        <item name="colorOnSecondaryContainer">@color/blue_900</item>

        <!-- Surfaces & Text -->
        <item name="colorOnSurface">@color/charcoal</item>
        <item name="colorSurfaceVariant">@color/blue_100</item>
        <item name="colorOnSurfaceVariant">@color/gray_secondary</item>

        <!-- Error (keep default Material error handling or system fallback) -->
        <item name="colorError">@color/black</item>

        <!-- System UI -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

    </style>

    <!-- App Theme -->
    <style name="Theme.SVARP" parent="Base.Theme.SVARP.Day" />

</resources>