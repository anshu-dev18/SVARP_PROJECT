<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft elevated surface -->
    <solid android:color="#89EDE4DB" />

    <!-- More realistic corner radius -->
    <corners android:radius="16dp" />

    <!-- Subtle border (not harsh) -->
    <stroke
        android:width="1dp"
        android:color="@color/brown" />

    <!-- Inner padding for breathing space -->
    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp" />
</shape>
